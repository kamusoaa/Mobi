<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_main_activity"
    tools:context=".activities.MainActivity"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="654dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_marginTop="30dp"
            android:src="@drawable/title"
            android:visibility="visible" />

        <TableLayout
            android:layout_width="661dp"
            android:layout_height="352dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp">

            <TableRow>

                <Button
                    android:id="@+id/recipe_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/recipe"
                    android:text="@string/recipe"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/id_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/id"
                    android:text="@string/id"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/redstone_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/redstone"
                    android:text="@string/redstone"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/gameplay_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/gameplay"
                    android:text="@string/gameplay"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/mobs_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/mobs"
                    android:text="@string/mobs"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/pro_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@null"
                    android:drawableTop="@drawable/pro"
                    android:text="@string/pro"
                    android:textColor="@color/white_color"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>